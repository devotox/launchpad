{
  "name": "@launchpad/shared-utils",
  "version": "1.0.0",
  "description": "Shared utilities for LoveHolidays Launchpad",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint . && oxlint .",
    "lint:fix": "biome lint --write . && biome format --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "22.15.21",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "2.1.8"
  },
  "files": ["dist"],
  "engines": {
    "node": ">=18.0.0"
  }
}
