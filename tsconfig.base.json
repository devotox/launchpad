{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "${configDir}",
    "rootDir": "${configDir}",
    "sourceRoot": "${configDir}",
    "outDir": "${configDir}/dist",
    "declarationDir": "${configDir}/dist",
    "tsBuildInfoFile": "${configDir}/dist/.tsbuildinfo",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ESNext"],
    "noEmit": false,
    "pretty": true,
    "strict": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "jsx": "preserve",
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["${configDir}/src/*"],
      "@Root/*": ["${configDir}/*"]
    }
  },
  "files": ["./reset.d.ts"],
  "types": ["node", "bun", "aws-lambda", "react", "react-dom"],
  "exclude": [
    "**/tmp/**",
    "**/dist/**",
    "**/*.bak/**",
    "**/build/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/storybook-static/**"
  ],
  "include": [
    "${configDir}/.*.ts",
    "${configDir}/.*.js",

    "${configDir}/*.ts",
    "${configDir}/*.js",
    "${configDir}/*.tsx",
    "${configDir}/*.jsx",
    "${configDir}/*.mts",
    "${configDir}/*.mjs",
    "${configDir}/*.cts",
    "${configDir}/*.cjs",
    "${configDir}/*.json",

    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.tsx",
    "${configDir}/src/**/*.jsx",
    "${configDir}/src/**/*.mts",
    "${configDir}/src/**/*.mjs",
    "${configDir}/src/**/*.cts",
    "${configDir}/src/**/*.cjs",
    "${configDir}/src/**/*.json",

    "${configDir}/tests/**/*.ts",
    "${configDir}/tests/**/*.js",
    "${configDir}/tests/**/*.tsx",
    "${configDir}/tests/**/*.jsx",
    "${configDir}/tests/**/*.mts",
    "${configDir}/tests/**/*.mjs",
    "${configDir}/tests/**/*.cts",
    "${configDir}/tests/**/*.cjs",
    "${configDir}/tests/**/*.json",

    "${configDir}/types/**/*.ts",
    "${configDir}/types/**/*.js",
    "${configDir}/types/**/*.tsx",
    "${configDir}/types/**/*.jsx",
    "${configDir}/types/**/*.mts",
    "${configDir}/types/**/*.mjs",
    "${configDir}/types/**/*.cts",
    "${configDir}/types/**/*.cjs",
    "${configDir}/types/**/*.json",

    "${configDir}/deploy/**/*.ts",
    "${configDir}/deploy/**/*.js",
    "${configDir}/deploy/**/*.tsx",
    "${configDir}/deploy/**/*.jsx",
    "${configDir}/deploy/**/*.mts",
    "${configDir}/deploy/**/*.mjs",
    "${configDir}/deploy/**/*.cts",
    "${configDir}/deploy/**/*.cjs",
    "${configDir}/deploy/**/*.json",

    "${configDir}/config/**/*.ts",
    "${configDir}/config/**/*.js",
    "${configDir}/config/**/*.tsx",
    "${configDir}/config/**/*.jsx",
    "${configDir}/config/**/*.mts",
    "${configDir}/config/**/*.mjs",
    "${configDir}/config/**/*.cts",
    "${configDir}/config/**/*.cjs",
    "${configDir}/config/**/*.json",

    "${configDir}/scripts/**/*.ts",
    "${configDir}/scripts/**/*.js",
    "${configDir}/scripts/**/*.tsx",
    "${configDir}/scripts/**/*.jsx",
    "${configDir}/scripts/**/*.mts",
    "${configDir}/scripts/**/*.mjs",
    "${configDir}/scripts/**/*.cts",
    "${configDir}/scripts/**/*.cjs",
    "${configDir}/scripts/**/*.json",

    "${configDir}/templates/**/*.ts",
    "${configDir}/templates/**/*.js",
    "${configDir}/templates/**/*.tsx",
    "${configDir}/templates/**/*.jsx",
    "${configDir}/templates/**/*.mts",
    "${configDir}/templates/**/*.mjs",
    "${configDir}/templates/**/*.cts",
    "${configDir}/templates/**/*.cjs",
    "${configDir}/templates/**/*.json",

    "${configDir}/.storybook/**/*.ts",
    "${configDir}/.storybook/**/*.js",
    "${configDir}/.storybook/**/*.tsx",
    "${configDir}/.storybook/**/*.jsx",
    "${configDir}/.storybook/**/*.mts",
    "${configDir}/.storybook/**/*.mjs",
    "${configDir}/.storybook/**/*.cts",
    "${configDir}/.storybook/**/*.cjs",
    "${configDir}/.storybook/**/*.json"
  ]
}
